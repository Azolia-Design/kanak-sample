---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/pages/Kareers/Hero/Hero.astro";
import Culture from "@/components/pages/Kareers/Culture/Culture.astro";
import Gallery from "@/components/pages/Kareers/Gallery/Gallery.astro";
import Perk from "@/components/pages/Kareers/Perk/Perk.astro";
import Cta from "@/components/pages/Kareers/Cta/Cta.astro";
import { getPage } from "@/prismic.js";
const { data } = await getPage("kareers");
---

<Layout title="Kareers" data_page="Kareers">
    <Hero title={data.hero_title[0].text} img={data.hero_bg} />
    <Culture title={data.culture_title} sub={data.culture_sub} list={data.culture_list} />
    <Gallery />
    <Perk
        label={data.perk_label}
        perk_list={data.perk_list} />
    <Cta
        title={data.cta_title[0].text}
        sub={data.cta_sub[0].text}
    />
</Layout>
