---
import Layout from "@/layouts/Layout.astro";

import Hero from "@pages/About/Hero/Hero.astro";
import Name from "@pages/About/Name/Name.astro";
import Mission from "@pages/About/Mission/Mission.astro";
import Why from "@pages/About/Why/Why.astro";
import Commit from "@pages/About/Commit/Commit.astro";
import Join from "@pages/About/Join/Join.astro";
import Award from "@pages/About/Award/Award.astro";
import { getPage } from "@/prismic.js";
const { data } = await getPage("about_page");
console.log()
---

<Layout
    title="Know Us"
    meta_desc={data.meta_desc[0].text}
    data_page="Know Us"
    footer_cta={data.cta_title[0].text}
    footer_bg={data.cta_background}
>
    <Hero />
    <Name />
    <Mission />
    <Why />
    <Commit />
    <Join />
    <Award
        endorsements_title={data.endorsements_title}
        endorsements_list={data.endorsements_list}
    />
</Layout>
