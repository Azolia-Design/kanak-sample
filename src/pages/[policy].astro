---
import Layout from "@/layouts/Layout.astro";
import PolicyHero from "@pages/Policy/Hero/PolicyHero.astro";
import PolicyMain from "@pages/Policy/Body/Policy.astro";
import policyData from "@pages/Policy/Data/policy-data";

export function getStaticPaths() {
  return policyData.map((item: any, idx: number) => {
    return {
      params: { policy: item.uid },
      props: { item },
    };
  });
}

const { policy } = Astro.params;
const { item } = Astro.props;
---

<Layout title={item.page_title} meta_desc={item.meta_desc}>
  <PolicyHero title={item.title} />
  <PolicyMain id={item.termly_id} />
</Layout>
