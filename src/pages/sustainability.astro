---
import Layout from "@/layouts/Layout.astro";
import Hero from '@pages/Sustainability/Hero/Hero.astro';
import HeroThree from '@pages/Sustainability/Hero/HeroThree';
import Intro from '@pages/Sustainability/Intro/Intro.astro';
import Practice from '@pages/Sustainability/Practice/Practice.astro';
import Commit from '@pages/Sustainability/Commit/Commit.astro';
import Response from "@pages/Sustainability/Response/Response.astro";
import icLoad from "@assets/contact-form-load.svg?raw";

import { getPage } from "@/prismic.js";
const { data } = await getPage("sustainability_page");
---
<Layout
    title={data.page_title}
    meta_desc={data.meta_desc}
    data_page="Sustainable"
    footer_cta={data.cta_title[0]?.text}
    footer_bg={data.cta_background}
    >
    <div class="sustainable-hero-three-wrap">
        <Hero/>
        <HeroThree client:load><Fragment set:html={icLoad} alt="" slot="icLoad"/></HeroThree>
        <Intro data={data}/>
        <Practice data={data}/>
    </div>
    <Commit data={data}/>
    <Response data={data}/>
</Layout>