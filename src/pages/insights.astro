---
import Layout from "@/layouts/Layout.astro";
import Main from "@pages/Resource/Main/Main.astro";
import Hero from "@pages/Resource/Hero/Hero.astro";
import { convertHighlight } from '@utils/text.js';
import { getPage } from '@/prismic.js';

const { data } = await getPage('resources_page');
let subTitle = convertHighlight(data.hero_demo);
---
<Layout title="Insights">
    <Hero title={data.hero_title[0].text} subTitle={subTitle}/>
    <Main />
</Layout>
