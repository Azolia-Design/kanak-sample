---
import Layout from "@/layouts/Layout.astro";
import Hero from "@pages/Avira/Hero/Hero.astro";
import Mission from "@pages/Avira/Mission/Mission.astro";
import Join from "@pages/Avira/Join/Join.astro";
import aviraCta from '@assets/avira-cta.jpg';

import { getPage } from "@/prismic.js";
const { data } = await getPage("pakway_page");
console.log(data)
let bg_cta = {
  dimensions: { width: 1728, height: 900 },
  alt: null,
  copyright: null,
  url: aviraCta,
  id: 'ZmGQ4Jm069VX1gk2',
  edit: { x: 0, y: 0, zoom: 1, background: 'transparent' }
}
---

<Layout
    title={data.page_title}
    meta_desc={data.meta_desc}
    open_graph={data.open_graph.url}
    data_page="Avira"
    footer_cta={data.cta_title[0]?.text}
    footer_bg={bg_cta}
>
    <Hero data={data}/>
    <Mission data={data} />
    <Join data={data}/>
</Layout>
