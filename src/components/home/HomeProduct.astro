import { Image } from 'astro:assets';
import arrIcon from '../../assets/arr-right.svg';
import sampleQR from '../../assets/sample-qr.png';
const productList = [
    'Bowls',
    'Plates & Platters',
    'Trays',
    'Soup Containers',
    'Produce',
    'Kutlery',
    'Kups',
    'Straws',
    'Klamshells',
    'Carry-Out Bags',
]
---
<section class="home-prod">
    <div class="container grid">
        <div class="home-prod-title-wrap">
            <h2 class="heading h1 txt-up txt-black home-prod-title">
                Explore our products, made with up to 100% recycled materials, reflecting our commitment to quality and the environment. All are designed with sustainability in mind.
            </h2>
        </div>
        <div class="home-prod-main">
            <div class="home-prod-main-list">
                {productList.map((item, idx) => (
                    <div class="home-prod-main-item">
                        <h3 class="heading h6 txt-up txt-black home-prod-main-item-title">
                            {item}
                        </h3>
                        <div class="txt txt-20 txt-bold home-prod-main-item-label">
                            {(idx + 1) < 10 ? '0' + (idx + 1) : idx + 1}
                        </div>
                        <div class="line">
                            <div class="line-inner"></div>
                        </div>
                        {idx == productList.length - 1 && (
                            <div class="line line-bottom"></div>
                        )}
                    </div>
                ))}
            </div>
        </div>
        <div class="home-prod-cards">
            <div class="home-prod-cards-inner">
                <div class="home-prod-cards-top">
                    <div class="heading h6 txt-up txt-black home-prod-cards-top-txt">
                        Product Kategories
                    </div>
                    <div class="home-prod-cards-nav">
                        <a href="#" class="home-prod-cards-nav-item">
                            <Image src={arrIcon} alt="Kanak Logo" class="ic ic-40"/>
                        </a>
                        <a href="#" class="home-prod-cards-nav-item">
                            <Image src={arrIcon} alt="Kanak Logo" class="ic ic-40"/>
                        </a>
                    </div>
                </div>
                <div class="home-prod-cards-bottom">
                    <div class="heading h5 txt-up txt-black home-prod-cards-bottom-txt">
                        {productList[0]}
                    </div>
                    <div class="home-prod-cards-qr">
                        <Image src={sampleQR} alt="Kanak Logo" class="ic ic-80"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style lang="scss">
    @import '../../styles/colors.scss';
    @import '../../styles/mixins.scss';
    .home-prod {
        padding-bottom: 28.8rem;
        &-title-wrap {
            grid-column: 1/-1;
            margin-bottom: 8rem;
        }
        &-title {
            max-width: 89rem;
        }
        &-main {
            grid-column: 1/9;
            display: flex;
            flex-direction: column;
            &-item {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding-top: 3rem;
                padding-bottom: 2.8rem;
                position: relative;
                &-title {
                    @include transition(color 400ms ease);
                }
                &-label {
                    color: rgba($cl-txt, .3);
                }
                &:hover {
                    .home-prod-main-item-title {
                        color: var(--cl-orange);
                    }
                    .line-inner {
                        transform: scaleX(1);
                    }
                }
                .line {
                    width: 100%;
                    height: .2rem;
                    position: absolute;
                    top: 0;
                    left: 0;
                    background-color: var(--cl-txt);
                    &-inner {
                        @include size(100%);
                        background-color: var(--cl-orange);
                        transform-origin: left;
                        transform: scaleX(0);
                        @include transition(transform 400ms ease);
                    }
                    &-bottom {
                        top: auto;
                        bottom: 0;
                    }
                }
            }
        }
        &-cards {
            grid-column: 11/16;
            &-inner {
                border-radius: 1rem;
                border: solid .2rem var(--cl-txt);
                height: 100%;
                overflow: hidden;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            &-nav {
                display: flex;
                &-item {
                    @include size(10.2rem, 10rem);
                    border-left: solid .2rem var(--cl-txt);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    &:first-child .ic {
                        transform: rotate(180deg);
                        opacity: .2;
                    }
                }
            }
            &-top {
                display: flex;
                height: 10rem;
                justify-content: space-between;
                border-bottom: solid .2rem var(--cl-txt);
                align-items: center;
                &-txt {
                    margin-left: 3.2rem;
                    max-width: 13.6rem;
                }
            }
            &-bottom {
                display: flex;
                height: 10rem;
                justify-content: space-between;
                border-top: solid .2rem var(--cl-txt);
                align-items: center;
                &-txt {
                    margin-left: 3.2rem;
                }
            }
            &-qr {
                @include size(10.2rem, 10rem);
                border-left: solid .2rem var(--cl-txt);
                display: flex;
                align-items: center;
                justify-content: center;
                img {
                    
                }
            }
        }
    }
</style>