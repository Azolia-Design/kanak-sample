---
interface Props {
	title: string;
    sub_title: string;
}
const { title, sub_title } = Astro.props;
---
<section class="home-hero">
    <div class="container grid">
        <h1 class="heading h0 txt-black home-hero-title">
            {title}
        </h1>
        <div class="grid home-hero-sub">
            <div class="home-hero-sub-top">
                <p class="txt txt-16 txt-med">
                    {sub_title}
                </p>
            </div>
            <div class="home-hero-sub-btn-wrap">
                <a href="./" class="btn btn-main">
                    <div class="txt txt-18 txt-med">Kontact us</div>
                </a>
            </div>
            <div class="home-hero-sub-cta-wrap">
                <div class="txt txt-18 txt-med">Scroll to Explore</div>
            </div>
        </div>
    </div>
</section>

<script>
    console.log('home hero embed')
    document.querySelector('.home-hero-sub-btn-wrap .btn').addEventListener('click', function(e) {
        e.preventDefault();
        console.log('hello world')
    })
</script>

<style lang="scss">
    .home-hero {
        padding-top: 18.4rem;
        &-title {
            grid-column: 1/10;
            margin-bottom: 6rem;
        }
        &-sub {
            grid-column: 1/7;
            grid-row: 2/3;
            grid-template-columns: repeat(2, 1fr);
            max-width: 48.9rem;
            column-gap: 0;
            &-top {
                grid-column: 1/3;
                padding: 1.8rem 1.4rem;
                border: solid .2rem var(--cl-txt);
            }
            &-btn-wrap {
                padding: 1.4rem;
                border: solid .2rem var(--cl-txt);
                border-top: none;
            }
            &-cta-wrap {
                padding: 1.4rem;
                border: solid .2rem var(--cl-txt);
                display: flex;
                align-items: center;
                justify-content: center;
                border-top: none;
                border-left: none;
            }
        }
    }
</style>