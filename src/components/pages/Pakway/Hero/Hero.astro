---
import { Image } from "astro:assets";
import PakwayHero from "./Hero";
import { parseLabelsRichtext } from '@utils/text';
import brcLogo from '@assets/brc.svg';
---
<PakwayHero
  title={Astro.props.data.hero_title[0].text}
  client:visible={{ rootMargin: "200% 0px 200% 0px" }}
>
  <Fragment
    set:html={parseLabelsRichtext(Astro.props.data.hero_subtitle, {
      inputLabel: 'Bold',
      outputClass: 'txt-bold'
    })}
  slot="subtitle" />
  <Image
    src={Astro.props.data.hero_image.url}
    class="img-fill"
    alt={Astro.props.data.hero_image.alt || ""}
    width={Astro.props.data.hero_image?.dimensions.width}
    height={Astro.props.data.hero_image?.dimensions.height}
    slot="heroImg" />
  <Image
    src={brcLogo}
    alt="BRC logo"
    slot="brcLogo" />
</PakwayHero>
