---
import { Image } from "astro:assets";
import PakMission from "./Mission";
---

<PakMission
  title={Astro.props.data.mission_title[0].text}
  subtitle={Astro.props.data.mission_subtitle[0].text}
  client:visible={{ rootMargin: "200% 0px 200% 0px" }}
>
  <Image
    src={Astro.props.data.mission_image.url}
    class="img-fill"
    alt={Astro.props.data.mission_image.alt || ""}
    width={Astro.props.data.mission_image?.dimensions.width}
    height={Astro.props.data.mission_image?.dimensions.height}
    slot="thumbnail"
    />
</PakMission>
