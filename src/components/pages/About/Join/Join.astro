--- 
import { Image } from "astro:assets";
import AboutJoin from './Join';
import joinImg1 from '@assets/abt-join-ic-1.svg';
import joinImg2 from '@assets/abt-join-ic-2.svg';
import joinImg3 from '@assets/abt-join-ic-3.svg';
---

<AboutJoin {...Astro.props} client:visible={{ rootMargin: "200% 0px 200% 0px" }}>
    <Image src={joinImg1} alt="" slot="joinImg1" class="img img-h" />
    <Image src={joinImg2} alt="" slot="joinImg2" class="img img-h" />
    <Image src={joinImg3} alt="" slot="joinImg3" class="img img-h" />
</AboutJoin>
