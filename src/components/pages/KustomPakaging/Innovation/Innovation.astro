---
import KustomPackagingInnovation from "./Innovation";
import { convertHighlight } from "@utils/text";
---

<KustomPackagingInnovation
    {...Astro.props}
    client:visible={{ rootMargin: "200% 0px 200% 0px" }}
>
    <Fragment set:html={convertHighlight(Astro.props.title)} slot="newTitle" />
    <Fragment
        set:html={Astro.props.sub
            .split(/(\b\w+-\b)/)
            .filter((part) => part !== "-")
            .map((word) => `<span>${word}</span>`)}
        slot="newSub"
    />
</KustomPackagingInnovation>
