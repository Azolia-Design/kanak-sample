---
import ContactForm from "./Form.jsx";
import { Image } from 'astro:assets';
import { getAllByType } from '@/prismic.js';

import icAvatar from "@assets/contact-form-avatar.svg";
import icEmail from "@assets/contact-form-email.svg";
import icSubmit from "@assets/contact-form-submit.svg";
import icPhone from "@assets/contact-form-phone.svg";
import icIndustry from "@assets/contact-form-industry.svg";
import icCompany from "@assets/contact-form-company.svg";
import icChat from "@assets/contact-form-chat.svg";
import icLoad from "@assets/contact-form-load.svg?raw";
import icSuccess from "@assets/contact-form-success.svg";
import icArrowUpRight from "@assets/arrow-up-right.svg"
const industryList = await getAllByType('industry')
---
<ContactForm list={industryList} {...Astro.props} client:visible={{rootMargin: "100% 0px 100% 0px"}}>
    <Image src={icAvatar} alt="" slot="icAvatar"/>
    <Image src={icEmail} alt="" slot="icEmail"/>
    <Image src={icSubmit} alt="" slot="icSubmit"/>
    <Image src={icPhone} alt="" slot="icPhone"/>
    <Image src={icIndustry} alt="" slot="icIndustry"/>
    <Image src={icCompany} alt="" slot="icCompany"/>
    <Image src={icChat} alt="" slot="icChat"/>
    <Fragment set:html={icLoad} alt="" slot="icLoad"/>
    <Image src={icSuccess} alt="" slot="icSuccess"/>
    <Image src={icArrowUpRight} alt="" slot="icArrowUpRight"/>
</ContactForm>
