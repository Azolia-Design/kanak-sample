---
const { title, sub_title } = Astro.props;
import { Image } from "astro:assets"
import homeCtaBg from '@assets/home-cta-bg2.jpg';
---
<section class="home-cta">
    <div class="home-cta-bg">
        <Image src={homeCtaBg} alt="" class="img img-fill" />
    </div>
    <div class="container grid">
        <div class="home-cta-main bg-light">
            <div class="home-cta-main-head">
                <h2 class="heading h1 txt-up txt-black home-cta-title">
                    Ready to elevate your brand?
                </h2>
            </div>
            <div class="home-cta-main-tail">
                <div class="line"></div>
                <a href="" class="btn btn-lg btn-wide home-cta-main-tail-btn">
                    <div class="txt txt-18 txt-med">
                        Request a quote
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    @use '@styles/mixins' as *;
    .home-cta {
        position: relative;
        z-index: 3;
        padding: {
            top: 39.6rem;
            bottom: 7.55rem;
        }
        @include md{
            padding: {
                top: 12.4rem;
                bottom: 5.7rem;
            }
        }
        &-bg {
            position: absolute;
            inset: 0;
        }
        .container {
            height: 100%;
        }
        &-main {
            grid-column: 1/6;
            align-self: end;
            border: solid .2rem var(--cl-txt);
            background-color: var(--cl-bg);
            @include sm {
                grid-column: span 4;
            }
            &-head {
                padding: 2rem;
            }
            &-tail {
                padding: 2rem;
                position: relative;
                @include md {
                    padding: 1.6rem;
                }
                .line {
                    position: absolute;
                    top: 0;
                    left: 0;
                }
                &-btn {
                    padding: 2rem 2.4rem;
                    text-transform: uppercase;
                    .txt-18 {
                        @include text(16);
                    }
                }
            }
        }
        &-title {
            @include md {
                @include text(h4);
            }
        }
    }
</style>