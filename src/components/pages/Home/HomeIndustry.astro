---
const { label, title, industry_list } = Astro.props;

import { Image } from "astro:assets";
import eduIcon from '@assets/edu.svg';
import arrIcon from '@assets/arr-ext.svg';
import ctaTxt from '@assets/cta-txt.svg';
import {getByUID} from '@/prismic.js';

const list = await Promise.all(
industry_list.map(async (industry: any) => {
        let item = getByUID('industry', industry.item.uid)
        return item
    })
)
---
<section class="home-indus bg-dark">
    <div class="container grid">
        <div class="home-indus-title-wrap">
            <div class="home-indus-title-stick">
                <p class="heading h4 txt-up txt-black home-indus-label">
                    {label}
                </p>
                <h2 class="heading h0 txt-up txt-black home-indus-title">
                    {title}
                </h2>
                <div class="home-indus-cta-wrap">
                    <a href="#" class="home-indus-cta">
                        <div class="home-indus-cta-inner">
                            <Image src={arrIcon} alt="arr icon" class="ic ic-36" />
                        </div>
                        <div class="home-indus-cta-outer">
                            <Image src={ctaTxt} alt="arr icon" class="ic" />
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="home-indus-main">
            <div class="home-indus-main-list">
                {list.map((item, idx) => (
                    <div class="grid home-indus-main-item">
                        <div class="home-indus-main-item-ic">
                            <Image src={item.data.icon.url} alt={item.data.icon.alt} class="ic ic-100" width={item.data.icon.dimensions.width} height={item.data.icon.dimensions.height}/>
                        </div>
                        <div class="home-indus-main-item-content">
                            <h3 class="heading h4 txt-up txt-black home-indus-main-item-title">
                                {item.data.title}
                            </h3>
                            <p class="txt txt-18 txt-med home-indus-main-item-sub">
                                {item.data.sub_title}
                            </p>
                            <a href={'/kustomer/' + item.uid} class="txt txt-18 txt-med txt-orange home-indus-main-item-link">
                                Learn more
                            </a>
                        </div>
                        <div class="line"></div>
                        {idx == list.length && <div class="line line-bottom"></div>}
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<script>

</script>

<style lang="scss">
    @use '@styles/colors' as *;
    @use '@styles/mixins' as *;
    .home-indus {
        padding-top: 20rem;
        padding-bottom: 20rem;
        background-color: var(--cl-bg-dark);
        color: var(--cl-txt-light);
        &-title-wrap {
            position: relative;
            grid-column: 1/8;
            @include md {
                grid-column: 1/6;
            }
        }
        &-title-stick {
            position: sticky;
            top: 20rem;
            max-width: 69rem;
            min-height: calc(100vh - 20rem - 6rem);
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: space-between;
        }
        &-label {
            margin-bottom: 2rem;
        }
        &-title {
            margin-bottom: auto;
        }
        &-cta {
            display: block;
            position: relative;
            padding: 2.8rem;
            @include size(16rem);
            &-inner {
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                background-color: var(--cl-orange);
                @include size(100%);
            }
            &-outer {
                position: absolute;
                inset: 0;
                animation: rot 20s linear infinite;
            }
            @keyframes rot {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(-360deg);
                }
            }
        }
        &-main {
            grid-column: 10/17;
            @include md {
                display: none;
                grid-column: 8/13;
            }
            &-item {
                grid-template-columns: repeat(7, 1fr);
                padding-top: 8rem;
                padding-bottom: 8rem;
                position: relative;
                &-ic {
                    grid-column: 1/4;
                    align-self: start;
                    justify-self: start;
                }
                &-content {
                    grid-column: 4/-1;
                    display: flex;
                    flex-direction: column;
                    align-items: start;
                }
                &-title {
                    margin-bottom: 1.6rem;
                    max-width: 28.3rem;
                }
                &-sub {
                    margin-bottom: 3.2rem;
                    color: rgba($cl-txt-light, .6);
                }
                .line {
                    width: 100%;
                    height: .2rem;
                    position: absolute;
                    top: 0;
                    left: 0;
                    background-color: rgba($cl-border, .3);
                    &-bottom {
                        top: auto;
                        bottom: 0;
                    }
                }
            }
        }
    }
</style>