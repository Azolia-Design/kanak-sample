---
import KatalogHero from "./Hero";
---

<KatalogHero
    {...Astro.props}
    client:visible={{ rootMargin: "100% 0% 100% 0%" }}
>
    <Fragment
        set:html={Astro.props.sub
            .split(/(\b\w+-\b)/)
            .filter((part) => part !== "-")
            .map((word) => `<span>${word}</span>`)
            .join(" ")}
        slot="newSub"
    />
</KatalogHero>
