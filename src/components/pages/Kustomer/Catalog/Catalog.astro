---
import KustomerCatalogTitle from "./CatalogTitle";
import KustomerCatalogThree from "./CatalogThree";
import KustomerCatalogGroup from "./CatalogGroup";

import arrIcon from "@assets/arr-right.svg?raw";
import "./Catalog.scss";
import { getByUID } from "@/prismic";

const { title, describe, label, groupData } = Astro.props;

/** (ğŸ’¡)  - Transform list id product group in each group to the list product data */
let listGroup = await Promise.all(
	groupData.map(async (group: any) => ({
			...group,
			list: await Promise.all(
				group.list.map(async ({ item }) => await getByUID("product_group", item.uid))
			)
		})
	)
)

/** (ğŸ’¡)  - Get all item in list group and call product feature */
let listItem = await Promise.all(
	listGroup
		.reduce((arr, curr) => arr.concat(curr.list), [])
		.map(async (category: any) => {
			let { data } = await getByUID("product", category.data.product_list.find((el:any) => el.is_featured).product.uid)
			return { ...category, product_feature: data }
		})
)
---

<section class="kustomer-cata">
	<div class="container grid">
		<KustomerCatalogTitle
			label={label}
			client:visible={{ rootMargin: "100% 0px 100% 0px" }}
		>
			<Fragment set:html={title} slot="title" />
			<Fragment set:html={describe} slot="describe" />
		</KustomerCatalogTitle>
		<div class="kustomer-cata-main">
			<div class="kustomer-cata-main-content-wrap">
				{listGroup.map((group, idx) => (
					<KustomerCatalogGroup
						key={idx}
						data={group}
						listItem={listItem}
						client:visible={{ rootMargin: "100% 0px 100% 0px" }}
						>
						<KustomerCatalogThree
							slot="card"
							isMobile={true}
							listItem={listItem.filter(item1 => group.list.some(item2 => item1.id === item2.id))}
							client:idle
							client:media="(max-width: 767px)"
						>
							<Fragment set:html={arrIcon} slot="arrIcon" />
						</KustomerCatalogThree>
					</KustomerCatalogGroup>

				))}
			</div>
			<KustomerCatalogThree
				listItem={listItem}
				client:media="(min-width: 768px)"
				client:idle
			>
				<Fragment set:html={arrIcon} slot="arrIcon" />
			</KustomerCatalogThree>
		</div>
	</div>
</section>
